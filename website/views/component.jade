extends layout

block content
	div.download
		a(href="#{component.url}") Download
	
	h2= component.name

	p= component.description
	
	if component.author
		p
			b= "Author: "
			= component.author
	
	hr
	
	if component.properties.length
		h4.entries Properties
		table.keywords
			each key in component.properties
				tr
					td= key.name
					td= key.type
					td= key.description
	
	if component.methods.length
		h4.entries Methods
		table.keywords
			each method in component.methods
				tr
					td
						if (typeof(method.returns) !== 'undefined')
							each name, index in method.returns[0].type.names
								if index > 0 
									='|'
								=name
							= ' '
						i
							u
								= method.name
						if (typeof(method.params) !== 'undefined')
							=" ("
							each param, i in method.params
								if i > 0
									= ' , '
								each type, index in param.type.names
									if index > 0
										= '|'
									i
										=type
								if (typeof(param.name) !== 'undefined')
									=' '
									=param.name
								
									
							=")"
					td= method.desc
					td
						ul
							each param in method.params ? method.params : []
								li
									=param.type.names[0]
									=' '
									=param.description
								
							
	
	if component.publish.length
		h4.entries Publish keys
		table.keywords
			each key in component.publish
				tr
					td: a(href="/keywords/#{key.name}") #{key.name}
					td= key.type
					td= key.description
					
	if component.subscription.length
		h4.entries Subscribe keys
		table.keywords
			each key in component.subscription
				tr
					td: a(href="/keywords/#{key.name}") #{key.name}
					td= key.type
					td= key.description

